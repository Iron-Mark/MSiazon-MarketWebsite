{
  "name": "msiazon-macaroon-market",
  "version": "1.0.0",
  "description": "Mark Siazon's Macaroon Market - Full Stack E-commerce Application",
  "main": "index.js",
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "echo 'Build complete - this is a full-stack application'",
    "test": "echo 'Tests not implemented yet'",
    "deploy": "pm2 start ecosystem.config.js --env production",
    "deploy:stop": "pm2 delete all",
    "deploy:restart": "pm2 restart all",
    "deploy:logs": "pm2 logs",
    "deploy:status": "pm2 status",
    "deploy:reload": "pm2 reload all"
  },
  "keywords": [
    "macaroon",
    "market",
    "ecommerce",
    "fullstack",
    "express",
    "vanilla-js"
  ],
  "author": "Mark Siazon",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Iron-Mark/MSiazon-MarketWebsite.git"
  }
}
